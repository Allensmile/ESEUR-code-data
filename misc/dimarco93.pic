# dimarco93.pic, 14 Jan 03

boxht = 0.5 ; boxwid = 3.0

define zigzag {
   $1 at $2+0.4,$3+lang_offset
   if $4 == 1 then {
      move to $2+0.8,$3+0.25+lang_offset
      line down 0.1 left 0.1
      line down 0.1 right 0.2
      line down 0.1 left 0.2
      line down 0.1 right 0.2
      line down 0.1 left 0.1
      }
   }

define language {
   lang_offset=$2+0.5
   $1 ljust at 0.0,lang_offset
   box at 0.8+(boxwid/2),lang_offset
   }

language("English", 0.0)
zigzag("tree", 0.7, 0.0, 1)
zigzag("wood       ", 2.1, 0.0, 1)
zigzag("forest", 3.0, 0.0, 0)

